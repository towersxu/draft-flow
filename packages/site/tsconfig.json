{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "module": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2015",
    "maxNodeModuleJsDepth": 5,
  },
  "path": {
    "src/*": ["src/*"],
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
